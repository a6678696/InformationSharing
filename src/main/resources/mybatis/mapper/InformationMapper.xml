<?xml version="1.0" encoding="UTF-8"?>
<!--suppress ALL-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ledao.mapper.InformationMapper">
    <resultMap id="InformationResult" type="Information">
        <result column="id" property="id"/>
        <result column="userId" property="userId"/>
        <result column="content" property="content"/>
        <result column="date" property="date"/>
    </resultMap>

    <select id="list" parameterType="map" resultMap="InformationResult">
        select *
        from t_information
        <where>
            <if test="userId != null">
                and userId = #{userId}
            </if>
        </where>
        order by date desc
        <if test="start != null and size != null">
            limit #{start},#{size}
        </if>
    </select>

    <select id="getTotal" parameterType="map" resultType="java.lang.Long">
        select count(*)
        from t_information
        <where>
            <if test="userId != null">
                and userId = #{userId}
            </if>
        </where>
    </select>

    <insert id="add" parameterType="Information">
        insert into t_information (userId, content, date)
        values (#{userId}, #{content}, now());
    </insert>

    <update id="update" parameterType="Information">
        update t_information
        <set>
            <if test="userId != null">
                userId=#{userId},
            </if>
            <if test="content != null and content != ''">
                content=#{content},
            </if>
        </set>
        where id=#{id}
    </update>
</mapper>